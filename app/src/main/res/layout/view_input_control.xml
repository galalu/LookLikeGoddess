<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:parentTag="LinearLayout">

    <LinearLayout
        android:id="@+id/ll_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_medium"

        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_control_margin_top"
            android:textColor="@color/bottomSheetItemTextColor"
            android:textSize="@dimen/input_control_text_large"/>

        <TextView
            android:id="@+id/tv_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_xsmall"
            android:textColor="@color/profileDataTitleColor"
            android:textSize="@dimen/input_control_text_medium"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_medium"
        android:layout_marginEnd="@dimen/layout_margin_medium"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_edit_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_control_margin_top"

            android:textColor="@color/colorTiffanyBlue"
            android:textSize="@dimen/input_control_text_medium"/>

        <EditText
            android:id="@+id/et_text"
            android:inputType="textCapWords|textNoSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-2dp"
            android:layout_marginTop="@dimen/layout_margin_xsmall"
            android:background="@color/colorTransparent"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="false"
            android:textColor="@color/bottomSheetItemTextColor"
            android:textSize="@dimen/input_control_text_large"/>


    </LinearLayout>


    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_control_line_height"
        android:layout_marginTop="@dimen/layout_margin_small"
        android:background="@color/grayBlue"/>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_medium"
        android:layout_marginTop="@dimen/layout_margin_small"
        android:layout_marginRight="@dimen/layout_margin_medium"
        android:textColor="@color/errorRed"
        android:textSize="@dimen/input_control_text_small"
        android:visibility="gone"
        />

</merge>
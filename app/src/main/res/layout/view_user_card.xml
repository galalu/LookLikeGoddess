<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fileDividerColor"
        android:orientation="vertical">

        <FrameLayout android:id="@+id/llAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivNoAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="@dimen/doctor_profile_margin_b"
                android:layout_marginTop="@dimen/doctor_profile_margin_t"
                android:background="@color/fileDividerColor"
                android:visibility="gone" />

            <healthcare.rhsbadgedcontrols.PSImageView
                android:id="@+id/ivDocAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"

                />
        </FrameLayout>

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:blurOverlayColor="@color/colorOverlay">

            <LinearLayout
                android:id="@+id/fio_text_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/doctor_profile_layout_h"
                android:orientation="vertical"
                android:paddingStart="@dimen/doctor_profile_margin_medium"
                android:paddingTop="14sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLastDocName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_toStartOf="@id/ivEdit"
                        android:textColor="@color/textColorNavy"
                        android:textSize="@dimen/doctor_profile_text_size"
                        android:typeface="sans" />

                    <ImageView
                        android:id="@+id/ivEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/view_inner_padding"
                        android:layout_marginEnd="@dimen/view_inner_padding"
                        android:src="@drawable/ic_edit_blue"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvFirstMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/textColorNavy"
                    android:textSize="@dimen/doctor_profile_text_size"
                    android:typeface="sans" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fio_edit_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <healthcare.rhsbadgedcontrols.PSInputControl
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <healthcare.rhsbadgedcontrols.PSInputControl
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <healthcare.rhsbadgedcontrols.PSInputControl
                    android:id="@+id/etMiddleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </eightbitlab.com.blurview.BlurView>
    </FrameLayout>

</merge>